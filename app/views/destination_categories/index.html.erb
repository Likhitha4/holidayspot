<h1>Listing destination_categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destination_categories.each do |destination_category| %>
      <tr>
        <td><%= destination_category.name %></td>
        <td><%= link_to 'Show', destination_category %></td>
        <td><%= link_to 'Edit', edit_destination_category_path(destination_category) %></td>
        <td><%= link_to 'Destroy', destination_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Destination category', new_destination_category_path %>
